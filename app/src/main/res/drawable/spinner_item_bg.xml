<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<item
    android:top="-2px"
    android:right="-2px"
    android:left="-2px">
    <shape>
        <!-- 填充的颜色 -->
        <solid android:color="#5c3fa9" />
        <!-- 设置矩形的四个角为弧形 -->
        <!-- android:radius 弧形的半径 -->
        <!--<corners android:radius="20px" />-->
        <!-- 描边 -->
        <stroke
            android:width="1px"
            android:color="#ffffff" />
    </shape>
</item>

</layer-list>