<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@drawable/top_bg"
        android:gravity="center">

        <ImageView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/back_btn_bg"
            android:onClick="back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="订单详情"
            android:textColor="@color/colorWhite"
            android:textSize="25sp" />

        <ImageView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#35000000"
        android:layout_margin="30px"
        android:orientation="vertical">

        <ListView
            android:id="@+id/order_shopInfo"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="7"
            android:background="@drawable/card_bg"
            android:layout_margin="50px"></ListView>

        <LinearLayout
            android:id="@+id/layout_audit"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:visibility="gone"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginTop="-30px"
            android:layout_weight="1.8"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="审核说明:"
                    android:textColor="@color/colorWhite" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60px"
                    android:layout_marginLeft="20px"
                    android:gravity="center_vertical"
                    android:background="@drawable/card_bg">
                    <EditText
                        android:id="@+id/audit_explain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:background="@null"
                        android:inputType="number"
                        android:textSize="15sp"
                        android:textColor="@color/colorWhite" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px">

                <Button
                    android:id="@+id/audit_yes"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_frame"
                    android:text="审核通过"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />
                <Button
                    android:id="@+id/audit_no"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_marginLeft="50px"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_frame"
                    android:text="审核不通过"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/express"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginTop="-30px"
            android:layout_weight="4"
            android:visibility="gone"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="550px"
                android:layout_height="80px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发货方式:"
                    android:textColor="@color/colorWhite" />

                <LinearLayout
                    android:layout_width="400px"
                    android:layout_height="60px"
                    android:layout_marginLeft="20px"
                    android:background="@drawable/card_bg">

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/colorWhite"></Spinner>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_express"
                android:layout_width="550px"
                android:layout_height="80px"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="快递单号:"
                    android:textColor="@color/colorWhite" />

                <LinearLayout
                    android:layout_width="400px"
                    android:layout_height="60px"
                    android:layout_marginLeft="20px"
                    android:gravity="center_vertical"
                    android:background="@drawable/card_bg">
                    <EditText
                        android:id="@+id/express_id"
                        android:layout_width="360px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:background="@null"
                        android:inputType="number"
                        android:textSize="15sp"
                        android:textColor="@color/colorWhite" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="550px"
                android:layout_height="80px"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@color/colorRed"
                android:text="提示：如果发货方式为快递发货，则快递单号不能为空！" />

            <Button
                android:id="@+id/btn_express"
                android:layout_width="600px"
                android:layout_height="wrap_content"
                android:background="@drawable/button_frame"
                android:text="发货"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
